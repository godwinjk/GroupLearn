<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.grouplearn.project.app.uiManagement.settings.SettingsActivity"
    tools:showIn="@layout/activity_settings">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_user_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:drawableLeft="@drawable/user_settings_40"
                android:drawablePadding="10dp"
                android:padding="20dp"
                android:text="User Settings"
                android:textSize="16dp" />


            <TextView
                android:id="@+id/tv_notification_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:drawableLeft="@drawable/notification_settings"
                android:drawablePadding="10dp"
                android:padding="20dp"
                android:text="Notification Settings"
                android:textSize="16dp" />


            <TextView
                android:id="@+id/tv_chat_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:drawableLeft="@drawable/chat_settings"
                android:drawablePadding="10dp"
                android:padding="20dp"
                android:text="Chat Settings"
                android:textSize="16dp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
