<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_contact_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <com.grouplearn.project.utilities.views.RoundedImageView
        android:id="@+id/iv_user_profile"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:background="@drawable/user_selector"
        android:scaleType="centerCrop"
        android:src="@drawable/user_admin"
        android:transitionName="transition_group_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_contact_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="5dp"
            android:gravity="center"
            android:text="Sample Name"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_contact_interests"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="No Interests"
            android:textSize="10dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tv_contact_skills"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="No skills"
            android:textSize="10dp"
            android:textStyle="italic" />
    </LinearLayout>
</LinearLayout>
