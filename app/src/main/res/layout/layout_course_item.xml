<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_badge"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_gravity="left"
        android:layout_margin="5dp"
        android:background="@drawable/badge_48"
        android:gravity="center"
        android:text=""
        android:textColor="@color/white"
        android:textSize="7dp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/ll_search_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/iv_item_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/shape_circle"
            android:src="@drawable/course_128" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Course Name"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:gravity="top"
                android:text="This is group that will expolre the new technologies in android"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_site"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:gravity="top"
                android:text="http://www.facebook.com"
                android:visibility="visible" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:background="@drawable/back_request_text"
            android:clickable="true"
            android:padding="7dp"
            android:text="View"
            android:textColor="@color/white"
            android:textSize="12dp" />
    </LinearLayout>
</android.support.v7.widget.CardView>